---
import { getCollection } from 'astro:content'
import type { GetStaticPaths } from 'astro'
import Layout from '../../layouts/Layout.astro'

export const prerender = true

export const getStaticPaths = (async () => {
  const posts = await getCollection('blog')
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }))
}) satisfies GetStaticPaths

const { post } = Astro.props
const { Content } = await post.render()
---

<Layout title={`${post.data.title} | jiiiyuuu.dv`} description={post.data.description}>
  <main class="blog-post">
    <article class="post-container">
      <!-- Header -->
      <header class="post-header">
        <div class="post-meta">
          <time datetime={post.data.pubDate.toISOString()}>
            {
              post.data.pubDate.toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })
            }
          </time>
          {
            post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )
          }
        </div>
        <h1 class="post-title">{post.data.title}</h1>
        <p class="post-description">{post.data.description}</p>

        <!-- Links -->
        {
          (post.data.github || post.data.npm) && (
            <div class="post-links">
              {post.data.github && (
                <a href={post.data.github} target="_blank" rel="noopener noreferrer" class="link-button">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                  GitHub
                </a>
              )}
              {post.data.npm && (
                <a href={post.data.npm} target="_blank" rel="noopener noreferrer" class="link-button">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M0 10v4h6v2h6v-2h12v-4H0zm6 2H4v-2h2v2zm12 0h-2v2h-2v-2h-2v2h-2v-2H8V8h10v4zm-2-2h-2v2h2v-2zm-6 0h-2v2h2v-2z" />
                  </svg>
                  npm
                </a>
              )}
            </div>
          )
        }

        <!-- External Links -->
        {
          post.data.externalLinks && post.data.externalLinks.length > 0 && (
            <div class="external-links">
              <p class="external-links-label">Also published on:</p>
              <div class="external-links-list">
                {post.data.externalLinks.map((link) => (
                  <a
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="external-link"
                    title={link.title || link.platform}
                  >
                    {link.platform === 'qiita' && (
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M3.57 10.06s.24 5.57 6.53 5.57c5.4 0 6.98-4.68 6.98-4.68V3.1c-6.23 0-13.51.63-13.51 6.96zm6.68 2.39c-2.56 0-3.49-1.63-3.49-3.39 0-1.77.93-3.4 3.49-3.4s3.49 1.63 3.49 3.4c0 1.76-.93 3.39-3.49 3.39z" />
                        <path d="M19.61 11.62s-.61 3.45-5.61 3.45v5.79c0 .56.45 1.01 1.01 1.01h4.6V11.62z" />
                      </svg>
                    )}
                    {link.platform === 'zenn' && (
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M.264 23.771h4.984c.264 0 .498-.147.645-.352L19.614.874c.176-.293-.029-.645-.381-.645h-4.72c-.235 0-.44.117-.557.323L.03 23.361c-.088.176-.029.41.234.41z" />
                      </svg>
                    )}
                    {link.platform === 'note' && (
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M8.364 4.636h7.272c2.039 0 3.697 1.658 3.697 3.697v7.334c0 2.039-1.658 3.697-3.697 3.697H8.364c-2.039 0-3.697-1.658-3.697-3.697V8.333c0-2.039 1.658-3.697 3.697-3.697z" />
                      </svg>
                    )}
                    {link.platform === 'dev.to' && (
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M7.42 10.05c-.18-.16-.46-.23-.84-.23H6l.02 2.44.04 2.45.56-.02c.41 0 .63-.07.83-.26.24-.24.26-.36.26-2.2 0-1.91-.02-1.96-.29-2.18zM0 4.94v14.12h24V4.94H0zM8.56 15.3c-.44.58-1.06.77-2.53.77H4.71V8.53h1.4c1.67 0 2.16.18 2.6.9.27.43.29.6.32 2.57.05 2.23-.02 2.73-.47 3.3zm5.09-5.47h-2.47v1.77h1.52v1.28l-.72.04-.75.03v1.77l1.22.03 1.2.04v1.28h-1.6c-1.53 0-1.6-.01-1.87-.3l-.3-.28v-3.16c0-3.02.01-3.18.25-3.48.23-.31.25-.31 1.88-.31h1.64v1.3zm4.68 5.45c-.17.43-.64.79-1 .79-.18 0-.45-.15-.67-.39-.32-.32-.45-.63-.82-2.08l-.9-3.39-.45-1.67h.76c.4 0 .75.02.75.05 0 .06 1.16 4.54 1.26 4.83.04.15.32-.7.73-2.3l.66-2.52.74-.04c.4-.02.73 0 .73.04 0 .14-1.67 6.38-1.8 6.68z" />
                      </svg>
                    )}
                    {link.platform === 'medium' && (
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z" />
                      </svg>
                    )}
                    {link.platform === 'hatena' && (
                      <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M20.47 0C22.42 0 24 1.58 24 3.53v16.94c0 1.95-1.58 3.53-3.53 3.53H3.53C1.58 24 0 22.42 0 20.47V3.53C0 1.58 1.58 0 3.53 0h16.94zM8.73 15.48v2.09c0 .28-.22.51-.5.51H6.14c-.27 0-.5-.23-.5-.5V6.42c0-.27.23-.5.5-.5h3.25c2.8 0 4.26 1.43 4.26 3.65 0 2.33-1.46 3.65-4.26 3.65H8.73zm9.69 2.6c-.98 0-1.77-.8-1.77-1.77 0-.98.8-1.78 1.77-1.78s1.77.8 1.77 1.78c0 .98-.79 1.77-1.77 1.77zm-9.69-7.33h-.6v2.02h.6c1.02 0 1.57-.44 1.57-1.01 0-.56-.55-1.01-1.57-1.01zm9.77-4.33v7.45h1.28V6.42h-1.28z" />
                      </svg>
                    )}
                    {link.platform === 'other' && (
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
                      </svg>
                    )}
                    <span>{link.platform === 'dev.to' ? 'DEV' : link.platform.charAt(0).toUpperCase() + link.platform.slice(1)}</span>
                  </a>
                ))}
              </div>
            </div>
          )
        }
      </header>

      <!-- Content -->
      <div class="post-content prose">
        <Content />
      </div>

      <!-- Footer -->
      <footer class="post-footer">
        <a href="/blog" class="back-link">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7" />
          </svg>
          Back to Blog
        </a>
      </footer>
    </article>
  </main>
</Layout>

<style>
  .blog-post {
    min-height: 100vh;
    background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 50%, var(--color-bg-primary) 100%);
    padding: 6rem 0;
  }

  .post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header */
  .post-header {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border-strong);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(184, 111, 79, 0.1);
    border: 1px solid var(--color-border-strong);
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--color-accent);
  }

  .post-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 300;
    color: var(--color-text-primary);
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .post-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 2rem;
  }

  .post-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .link-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: rgba(184, 111, 79, 0.1);
    border: 1px solid var(--color-border-strong);
    border-radius: 4px;
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .link-button:hover {
    background: rgba(184, 111, 79, 0.2);
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .link-button svg {
    width: 18px;
    height: 18px;
  }

  /* External Links */
  .external-links {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .external-links-label {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .external-links-list {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .external-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 4px;
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .external-link:hover {
    background: var(--color-bg-tertiary);
    border-color: var(--color-border-strong);
    color: var(--color-accent);
    transform: translateY(-2px);
  }

  .external-link svg {
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  /* Content - Prose Styles */
  .post-content {
    margin-bottom: 4rem;
  }

  .prose :global(h2) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2rem;
    font-weight: 400;
    color: var(--color-text-primary);
    margin-top: 3rem;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  .prose :global(h3) {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-text-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .prose :global(h4) {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-text-primary);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .prose :global(p) {
    color: var(--color-text-secondary);
    line-height: 1.9;
    margin-bottom: 1.75rem;
    font-size: 1.0625rem;
    font-weight: 400;
  }

  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: none;
    border-bottom: 1px solid var(--color-border-strong);
    transition: border-color 0.3s ease;
  }

  .prose :global(a:hover) {
    border-bottom-color: var(--color-accent);
  }

  .prose :global(ul),
  .prose :global(ol) {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .prose :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
    background: var(--color-bg-code-inline);
    padding: 0.2em 0.5em;
    border-radius: 4px;
    color: var(--color-text-tertiary);
    font-weight: 500;
  }

  .prose :global(pre) {
    background: var(--color-bg-code);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
    box-shadow: 0 2px 8px rgba(157, 131, 103, 0.08);
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
    color: var(--color-text-primary);
    font-size: 0.875rem;
    line-height: 1.7;
    font-weight: 400;
  }

  .prose :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1.5rem;
    margin: 2rem 0;
    color: var(--color-text-primary);
    font-style: italic;
  }

  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border-strong);
    margin: 3rem 0;
  }

  /* Footer */
  .post-footer {
    padding-top: 2rem;
    border-top: 1px solid var(--color-border-strong);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    gap: 0.75rem;
  }

  .back-link svg {
    width: 18px;
    height: 18px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-post {
      padding: 4rem 0;
    }

    .post-header {
      margin-bottom: 3rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
  }
</style>
