---
import { getCollection } from 'astro:content'
import Layout from '../../layouts/Layout.astro'

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())

const featuredPosts = allPosts.filter((post) => post.data.featured)
const regularPosts = allPosts.filter((post) => !post.data.featured)
---

<Layout
  title="Blog | jiiiyuuu.dv"
  description="技術ブログ記事一覧。ソフトウェア開発、アーキテクチャ、ツール開発について。"
>
  <main class="blog-index">
    <!-- Hero Section -->
    <section class="blog-hero">
      <div class="container">
        <h1 class="page-title">Blog</h1>
        <p class="page-description">
          ソフトウェア開発の実践知、技術選定の考え方、<br />
          そして日々の学びを記録しています。
        </p>
      </div>
    </section>

    <!-- Featured Posts -->
    {
      featuredPosts.length > 0 && (
        <section class="featured-section">
          <div class="container">
            <h2 class="section-title">Featured</h2>
            <div class="featured-grid">
              {featuredPosts.map((post) => (
                <article class="featured-card">
                  <a href={`/blog/${post.slug}`} class="card-link">
                    <div class="card-content">
                      <div class="card-meta">
                        <time datetime={post.data.pubDate.toISOString()}>
                          {post.data.pubDate.toLocaleDateString('ja-JP', {
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric',
                          })}
                        </time>
                        {post.data.tags.length > 0 && (
                          <div class="tags">
                            {post.data.tags.slice(0, 3).map((tag) => (
                              <span class="tag">{tag}</span>
                            ))}
                          </div>
                        )}
                      </div>
                      <h3 class="card-title">{post.data.title}</h3>
                      <p class="card-description">{post.data.description}</p>
                      <span class="read-more">
                        Read more
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M5 12h14M12 5l7 7-7 7" />
                        </svg>
                      </span>
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- All Posts -->
    <section class="posts-section">
      <div class="container">
        <h2 class="section-title">All Posts</h2>
        <div class="posts-list">
          {
            regularPosts.map((post) => (
              <article class="post-item">
                <a href={`/blog/${post.slug}`} class="post-link">
                  <time datetime={post.data.pubDate.toISOString()} class="post-date">
                    {post.data.pubDate.toLocaleDateString('ja-JP', {
                      year: 'numeric',
                      month: '2-digit',
                      day: '2-digit',
                    })}
                  </time>
                  <div class="post-content">
                    <h3 class="post-title">{post.data.title}</h3>
                    <p class="post-description">{post.data.description}</p>
                    {post.data.tags.length > 0 && (
                      <div class="tags">
                        {post.data.tags.slice(0, 3).map((tag) => (
                          <span class="tag">{tag}</span>
                        ))}
                      </div>
                    )}
                  </div>
                </a>
              </article>
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .blog-index {
    min-height: 100vh;
    background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 50%, var(--color-bg-primary) 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Hero Section */
  .blog-hero {
    padding: 8rem 0 4rem;
    text-align: center;
  }

  .page-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 300;
    color: var(--color-text-primary);
    margin-bottom: 1.5rem;
  }

  .page-description {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
  }

  /* Section Titles */
  .section-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-accent);
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Featured Section */
  .featured-section {
    padding: 4rem 0;
  }

  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .featured-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border-strong);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .featured-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-accent);
    box-shadow: 0 8px 32px rgba(184, 111, 79, 0.1);
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-content {
    padding: 2rem;
  }

  .card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }

  .card-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.75rem;
    font-weight: 400;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .card-description {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .read-more svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .featured-card:hover .read-more svg {
    transform: translateX(4px);
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: rgba(184, 111, 79, 0.1);
    border: 1px solid var(--color-border-strong);
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--color-accent);
  }

  /* Posts List */
  .posts-section {
    padding: 4rem 0 8rem;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .post-item {
    border-bottom: 1px solid var(--color-border);
  }

  .post-link {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: 2rem;
    padding: 2rem 0;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .post-link:hover {
    padding-left: 1rem;
  }

  .post-date {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
    font-variant-numeric: tabular-nums;
  }

  .post-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .post-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-text-primary);
    transition: color 0.3s ease;
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-hero {
      padding: 6rem 0 3rem;
    }

    .featured-grid {
      grid-template-columns: 1fr;
    }

    .post-link {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .post-date {
      order: -1;
    }
  }
</style>
