---
/**
 * pages/index.astro - トップページ
 *
 * TopHero コンポーネントを client:only="svelte" で読み込み、
 * クライアントサイドでのみThree.jsを実行する。
 */

import { getCollection } from 'astro:content'
import TopHero from '../components/features/TopHero/index.svelte'
import Layout from '../layouts/Layout.astro'

const latestPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3)
---

<Layout title="jiiiyuuu.dv | Tech Blog">
  <main>
    <!-- 
      client:only="svelte" を使用することで、
      Three.js を含むコンポーネントがサーバーサイドで実行されない。
      これはSSR環境でwindowオブジェクトが存在しないことによる
      エラーを回避するための重要な設定。
    -->
    <TopHero client:only="svelte" />

    <!-- Latest Posts -->
    <section class="content-section">
      <div class="container">
        <h2 class="section-title">Latest Posts</h2>
        {
          latestPosts.length > 0 ? (
            <div class="posts-grid">
              {latestPosts.map((post) => (
                <article class="post-card">
                  <a href={`/blog/${post.slug}`} class="post-link">
                    <div class="post-meta">
                      <time datetime={post.data.pubDate.toISOString()}>
                        {post.data.pubDate.toLocaleDateString('ja-JP', {
                          year: 'numeric',
                          month: 'short',
                          day: 'numeric',
                        })}
                      </time>
                      {post.data.tags.length > 0 && (
                        <span class="post-tag">{post.data.tags[0]}</span>
                      )}
                    </div>
                    <h3 class="post-title">{post.data.title}</h3>
                    <p class="post-description">{post.data.description}</p>
                    <span class="read-more">
                      Read more →
                    </span>
                  </a>
                </article>
              ))}
            </div>
          ) : (
            <p class="section-description">Coming soon...</p>
          )
        }
        <div class="view-all">
          <a href="/blog" class="view-all-link">
            View all posts
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .content-section {
    min-height: 100vh;
    padding: 6rem 2rem;
    background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    margin-bottom: 3rem;
    font-family: 'Cormorant Garamond', Garamond, serif;
    font-size: 2.5rem;
    font-weight: 300;
    color: var(--color-text-primary);
    text-align: center;
  }

  .section-description {
    font-size: 1.125rem;
    color: var(--color-text-tertiary);
    text-align: center;
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .post-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-border-strong);
    box-shadow: 0 8px 24px rgba(184, 111, 79, 0.1);
  }

  .post-link {
    display: block;
    padding: 2rem;
    text-decoration: none;
    color: inherit;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }

  .post-tag {
    padding: 0.25rem 0.75rem;
    background: rgba(184, 111, 79, 0.1);
    border: 1px solid var(--color-border-strong);
    border-radius: 100px;
    font-size: 0.75rem;
    color: var(--color-accent);
  }

  .post-title {
    font-family: 'Cormorant Garamond', Garamond, serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-text-primary);
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .post-description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    color: var(--color-accent);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .post-card:hover .read-more {
    text-decoration: underline;
  }

  /* View All */
  .view-all {
    text-align: center;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    color: var(--color-text-primary);
    background: transparent;
    border: 1px solid var(--color-border-strong);
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .view-all-link:hover {
    background: var(--color-bg-tertiary);
    border-color: var(--color-accent);
  }

  .view-all-link svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .view-all-link:hover svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
