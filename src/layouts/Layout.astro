---
/**
 * Layout.astro - 共通レイアウト
 *
 * 全ページで共有されるHTML構造、メタタグ、フォント読み込みを定義
 */

interface Props {
  title: string
  description?: string
}

const {
  title,
  description = 'ソフトウェアアーキテクチャ、クラフトマンシップ、そして技術の美学について。',
} = Astro.props
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;1,300;1,400&family=Source+Sans+3:wght@300;400;500;600&family=Noto+Sans+JP:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* ========================
     CSS Reset & Base Styles
     ======================== */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    font-family: 'Source Sans 3', 'Noto Sans JP', sans-serif;
    font-weight: 400;
    line-height: 1.6;
    color: #dee2e6;
    background-color: #0a0e1c;
    overflow-x: hidden;
  }

  /* ========================
     Typography
     ======================== */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Cormorant Garamond', Garamond, serif;
    font-weight: 300;
    line-height: 1.2;
  }

  /* ========================
     Links
     ======================== */
  a {
    color: inherit;
    text-decoration: none;
  }

  /* ========================
     Images
     ======================== */
  img,
  picture,
  video,
  canvas,
  svg {
    display: block;
    max-width: 100%;
  }

  /* ========================
     Forms
     ======================== */
  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  /* ========================
     Accessibility
     ======================== */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  /* ========================
     Custom Scrollbar
     ======================== */
  ::-webkit-scrollbar {
    width: 10px;
  }

  ::-webkit-scrollbar-track {
    background: #0a0e1c;
  }

  ::-webkit-scrollbar-thumb {
    background: #27355e;
    border-radius: 5px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #b8984a;
  }
</style>
